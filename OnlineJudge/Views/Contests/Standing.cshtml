@model IEnumerable<OnlineJudge.ViewModels.StandingRowViewModel>


@{
    ViewData["Title"] = "Standing";
}

<h1>Standing</h1>

<table class="table">
    <thead>
        <tr>
            <td style="font-weight:bold">
                Handle
            </td>
            @if(Model.Count() > 0)
            {
                for(int i = 1; i <= Model.First().UserSubmitCount.Count(); i++)
                {
                    <td style="font-weight:bold">@OnlineJudge.ViewModels.StandingRowViewModel.ConvertToString(i)</td>
                }
            }
            
        </tr>
    </thead>

    <tbody> 
        @foreach(var row in Model)
        {
            if (!row.IsInContestTime)
                continue;
        <tr>

                <td>@row.Handle</td>
                @foreach(var col in row.UserSubmitCount)
                {
                    if(col.NumberOfSubmissions == 0)
                    {
                        <td>--</td>
                    }
                    else
                    {
                        if (col.IsAccepted)
                        {
                            <td style="color:green; font-weight:bold">
                                +@col.NumberOfSubmissions
                            </td>
                        }
                        else
                        {
                            <td style="color:blue;">
                                -@col.NumberOfSubmissions
                            </td>
                        }
                    }
                }
        </tr>
        }
    </tbody>

    
</table>



@model IEnumerable<OnlineJudge.ViewModels.StandingRowViewModel>


@{
    ViewData["Title"] = "Standing";
}

<h1>Standing</h1>

<table class="table">
    <thead>
        <tr>
            <td>
                Handle
            </td>
            @if(Model.Count() > 0)
            {
                for(int i = 1; i <= Model.First().UserSubmitCount.Count(); i++)
                {
                    <td>@Model.First().ConvertToString(i)</td>
                }
            }
            
        </tr>
    </thead>

    <tbody>
        <tr>
            @foreach(var row in Model)
            {
                if (!row.IsInContestTime)
                    continue;

                <td>@row.Handle</td>
                @foreach(var col in row.UserSubmitCount)
                {
                    <td>@col</td>
                }
            }
        </tr>
    </tbody>
</table>
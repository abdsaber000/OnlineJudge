@model IEnumerable<OnlineJudge.ViewModels.AllProblemsViewModel>

@{
    ViewData["Title"] = "Problems";
}

<h1>Problems</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            
            <th>
                Submissions
            </th>


            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    <a asp-controller="Problems"
                       asp-action="Details"
                       asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Title)</a>
                </td>
            
            <td>@item.NumberOfAcceptedSubmissions / @item.NumberOfTotalSubmissions</td>
                @if (item.CanEditOrDelete)
                {
                    <td>
                        <a asp-controller="Problems"
                           asp-action="Edit"
                           asp-route-id="@item.Id"
                           class="btn btn-primary">Edit</a> |
                        <a asp-controller="Problems"
                           asp-action="Delete"
                           asp-route-id="@item.Id"
                           class="btn btn-danger">Delete</a>
                    </td>
                }
            
        </tr>
}
    </tbody>
</table>

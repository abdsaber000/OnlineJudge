@model IEnumerable<OnlineJudge.Models.Problem>

@{
    ViewData["Title"] = "ProblemsInContest";
}

<h1>Problems</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                Submissions
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            
            <td>
                <a asp-controller="Problems"
                    asp-action="Details"
                    asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Title)</a>
            </td>
            <td>
                0
            </td>
            
            <td>
                    <a asp-controller="Problems"
                       asp-action="Edit"
                       asp-route-id="@item.Id">Edit</a> |
                    <a asp-controller="Problems"
                       asp-action="Delete"
                       asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

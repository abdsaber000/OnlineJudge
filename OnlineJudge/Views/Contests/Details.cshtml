@model OnlineJudge.Models.Contest

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>
@{
    var problemsUrl = Model.Id + "/Problems";
    var standingUrl = Model.Id + "/Standing";
    var submissionsUrl = Model.Id + "/Submissions";
}
<div class="container">
    <h4>Contest</h4>
    <hr />
    <dl class="row">
        <div class="col">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.StartDate)
            </dt>
            <dd class="col-sm-10 start-date">
                @Html.DisplayFor(model => model.StartDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.EndDate)
            </dt>
            <dd class="col-sm-10 end-date">
                @Html.DisplayFor(model => model.EndDate)
            </dd>
        </div>

        <div class="col">
            <h3 class="remaining-time">Remaining Time:</h3>
        </div>
    </dl>
    
    <a 
        href="@problemsUrl"
        class="btn btn-primary">Show Problems</a>

    <a 
        href="@standingUrl"
        class="btn btn-primary">Standing</a>

    <a href="@submissionsUrl"
       class="btn btn-primary">Submissions</a>
</div>
<div>
    @* <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> | *@
    <a asp-action="Index">Back to List</a>
</div>

<script src="~/js/contest_remaining_time.js"> </script>